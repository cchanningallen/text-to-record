{
    "parser": {},
    "extends": [
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "plugin:prettier/react"
    ],
    "plugins": ["react", "prettier"],
    "rules": {
        // Don't need to explicitly import React when using Next.js
        "react/react-in-jsx-scope": "off"
    },
    "globals": {
        // Don't need to explicitly import React when using Next.js
        "React": "writable"
    }
}
